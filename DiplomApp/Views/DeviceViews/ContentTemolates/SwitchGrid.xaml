<UserControl x:Class="ClientApp.DeviceViews.Grids.SwitchGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientApp.DeviceViews.Grids"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="SwitchName" Grid.Column="0" HorizontalAlignment="Left" Margin="20,0,0,0"/>
        <CheckBox x:Name="EnableChesck" Grid.Column="1" HorizontalAlignment="Center" Style="{StaticResource CircleCheckbox}"/>
    </Grid>
</UserControl>
